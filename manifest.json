{
  "manifest_version": 3,
  "name": "GPT Green Tracker",
  "version": "1.0.0",
  "description": "Track the environmental impact of your conversations with ChatGPT",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png", 
    "128": "icons/icon128.png"
  },
  
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "permissions": ["scripting", "activeTab", "tabs"],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*"],
      "js": [
        "assets/models/cl100k_base.js",
        "assets/models/r50k_base.js",
        "assets/models/p50k_base.js",
        "assets/models/o200k_base.js",
        "services/tokenizer.service.js",
        "services/data.service.js",
        "components/model-picker/model-picker.js",
        "models.js",
        "content.js",
        "models/pues.js",
        "components/pue-picker/pue-picker.js"
      ],
      "css": [
        "components/pue-picker/pue-picker.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "overview/*",
        "assets/models/*.js",
        "assets/svg/loading.svg",
        "components/model-picker/*",
        "models/pues.js",
        "components/pue-picker/*"
      ],
      "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*", "<all_urls>"]
    }
  ]
}